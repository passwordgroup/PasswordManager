<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape android:shape="rectangle">
            <corners android:radius="2dp" />

            <solid android:color="@color/voice_txt_color" />

            <stroke android:color="@color/voice_txt_color" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="2dp" />

            <solid android:color="@color/voice_txt_color" />

            <stroke android:color="@color/voice_txt_color" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="2dp" />

            <solid android:color="@color/white" />

            <stroke android:width="0.6dp" android:color="@color/voice_txt_color" />
        </shape></item>

</selector>