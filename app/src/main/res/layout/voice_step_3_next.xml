<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_cancle_stept3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:padding="8dp"
        android:textSize="16dp"
        android:textColor="@color/voice_txt_color"
        android:text="取消"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/txt_listitem_title"
        android:text="@string/text_step_3_tip"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/btn_next_step_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:minHeight="32dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/buttontonext"
        android:textSize="16dp"
        android:textColor="@drawable/voice_next_btn_txt"
        android:background="@drawable/voice_next_btn_bg"
        />
</LinearLayout>
